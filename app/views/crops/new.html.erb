<h1>A shiny new crop</h1>


<%= form_for @crop do |f| %>

  <div class="form-group">
  <%= f.label :name %>
  <%= f.text_field :name, class:"form-control", autofocus:true %>
  </div>

  <div class="form-group">
  <%= f.label :description %>
  <%= f. text_field :description, class:"form-control" %>
  </div>

  <button type="submit" class="btn btn-default">Submit</button>

<% end %>
